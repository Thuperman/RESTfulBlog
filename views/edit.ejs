<%- include('partials/header') %> 

<div class="ui main text container shortPage">
    <div class="ui inverted container segment">
        <h1 class="ui huge header">Edit: <%= blog.title %> </h1>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="ui field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" value="<%= blog.title %>">
            </div>
            <div class="ui field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" value="<%= blog.image %>">
            </div>
            <div class="ui field">
                <label for="text">Body</label>
                <textarea name="blog[body]" id="blogBody" cols="30" rows="10"> <%= blog.body %> </textarea>           
            </div>
            <div id="wrapper" class="container">
                <input class="ui inverted big green button" type="submit">
            </div>       

        </form>
    </div>
</div>

<%- include('partials/footer') %> 