<%- include('partials/header') %> 

<div class="ui main text container shortPage">
    <div class="ui inverted container segment">
        <h1 class="ui huge header">New Blog</h1>
        <form class="ui form" action="/blogs" method="POST">
            <div class="ui field">
                <label for="title">Title</label>
                <input type="text" name="blog[title]" placeholder="title">
            </div>
            <div class="ui field">
                <label for="image">Image</label>
                <input type="text" name="blog[image]" placeholder="image">
            </div>
            <div class="ui field">
                <label for="text">Body</label>
                <textarea name="blog[body]" placeholder="what's on your mind?" id="blogBody" cols="30" rows="10"></textarea>           
            </div>
            <div id="wrapper" class="container">
                <input class="ui inverted big green button" type="submit">
            </div>       
        </form>
    </div>
</div>

<%- include('partials/footer') %> 