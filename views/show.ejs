<%- include('partials/header') %> 

<div class="ui main text container shortPage">
    <div class="ui inverted container segment">
        <h1 class="ui huge header"> <%= blog.title %> </h1>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image showImage" src="<%= blog.image %> " alt=" <% blog.title %> ">
                <div class="content">
                    <span> <%= blog.created.toDateString() %> </span>
                </div>
                <div class="ui description segment">
                    <p> <%= blog.body %> </p>
                </div>
                <div class="ui two column grid">
                    <div class="row showRow">
                        <div id="wrapper" class="column">
                            <a href="/blogs/<%= blog._id %>/edit">
                            <button class="ui inverted big orange button">EDIT</button>
                            </a>
                        </div>
                        <form id="wrapper" class="column" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                            <button class="ui inverted big red button">DELETE</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
<%- include('partials/footer') %> 